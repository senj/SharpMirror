@page "/"
@namespace SmartMirror.Pages

@using Microsoft.AspNetCore.Hosting;
@using Microsoft.Extensions.Hosting;

@inject IWebHostEnvironment env
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" @*http-equiv="refresh" content="300"*@ />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartMirror</title>
    <base href="~/" />
    <link rel="icon" href="/images/home.png">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script src="/scripts/chart.js"></script>
    <script src="/scripts/piechart.js"></script>

    @{
        string jssettingsName = $"jssettings.json";
        if (!env.IsProduction())
        {
            jssettingsName = $"jssettings.{env.EnvironmentName}.json";
        }
    }

    <script type="text/javascript" src="@jssettingsName"></script>

    <script src="https://sdk.scdn.co/spotify-player.js"></script>
    <script src="/scripts/spotifywebplayer.js"></script>

    <script src="/scripts/fitbit.js"></script>

    @*<script src="/scripts/speech.js"></script>*@
    <script src="/scripts/speechOutput.js"></script>
</head>
<body class="background">
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
