<div class="container-fluid" style="font-size: 0.9rem">
    <br />
    <div class="row">
        <div class="col-lg-4 col-sm-12">
            <Clock Show="true"></Clock>
            <Calendar ></Calendar>
            <Bundesliga Show="false"></Bundesliga>
            <Vvs Limit="5" Filter="new int[] { 0, 1 }" Show="true"></Vvs> @*add 5 for bus*@
            <Fitbit Show="false"></Fitbit>
            <Bring></Bring>
            <GermanQuote Show="false"></GermanQuote>
            <RouteTraffic Show="true"></RouteTraffic>
        </div>
        <div class="col-lg-4">
            <News RefreshIntervalSeconds="30" Show="false"></News>
        </div>
        <div class="col-lg-4">
            <CurrentWeather NumberOfDays="5"></CurrentWeather>
            <Fuel Limit="5"></Fuel>
            <Spotify></Spotify>
            @*<HueLights Show="false"></HueLights>*@
            <Space Show="false"></Space>
            <GoogleFit Show="false"></GoogleFit>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <Speech VoiceOutput="true"></Speech>
        </div>
    </div>
</div>

@code {
    [CascadingParameter(Name = "Profile")] protected string Profile { get; set; }
}