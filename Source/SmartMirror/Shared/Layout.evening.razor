<div class="container-fluid" style="font-size: 0.9rem">
    <br />
    <div class="row">
        <div class="col-lg-4 col-sm-12">
            <Clock></Clock>
            <Profile ProfileName="@Profile" Show="false"></Profile>
            <Speech></Speech>
            <Calendar NumberOfDays="5"></Calendar>  
        </div>
        <div class="col-lg-4">            
        </div>
        <div class="col-lg-4">
            <CurrentWeather NumberOfDays="5"></CurrentWeather>
            <Fuel Limit="5"></Fuel>
            <Spotify Show="true"></Spotify>
            <HueLights Show="true"></HueLights>
        </div>
    </div>
</div>

@code {
    [CascadingParameter(Name = "Profile")] protected string Profile { get; set; }
}